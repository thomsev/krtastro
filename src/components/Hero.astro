---
const { title, subtitle, cta } = Astro.props;
---
<section class="section">
  <div class="container">
    <div class="hero">
      <h1>{title}</h1>
      {subtitle && <p>{subtitle}</p>}
      {cta && (
        <a class="button" href={cta.href}>
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>
